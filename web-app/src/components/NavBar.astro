---
import City from "./City.astro";
import Logo from "./Logo.astro";
import Profile from "./Profile.astro";
import Home from "./Home.astro";

interface Props {
    username: string;
    city: string;
}

const {username, city} = Astro.props;
---

<ul class="nav-bar">
    <Logo></Logo>
	<City title = {city}></City>
    <Home></Home>
    <Profile username={username}></Profile>
</ul>
<style>
    ul {
        list-style-type: none;
        margin: 3vh 0;
        padding: 0;
        align-items: center;
    }
</style>