---
interface Props {
    storeId: number;
    name: string;
}
const {storeId, name} = Astro.props;
---
<div class="nav">
    <div class="store">
        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24" 
        viewBox="0 0 24 24"  fill="currentColor" 
        class="icon icon-tabler icons-tabler-filled icon-tabler-basket">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M15.949 3.684l1.104 3.316h1.947a3 3 0 0 1 2.962 3.477l-1.252
        7.131a4 4 0 0 1 -3.954 3.392h-9.512a3.994 3.994 0 0 1 -3.95
        -3.371l-1.258 -7.173a3 3 0 0 1 2.964 -3.456h1.945l1.105 -3.316a1 1 0
        0 1 1.898 .632l-.895 2.684h5.893l-.895 -2.684a1 1 0 1 1 1.898
        -.632m-3.949 7.316a3 3 0 0 0 -2.995 2.824l-.005 .176a3 3 0 1 0 3 -3" /></svg>
        <p>{name}</p>
    </div>
    <a href=`/cart/?storeId=${storeId}&name=${name}`>
        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24" 
        viewBox="0 0 24 24"  fill="currentColor"  class="icon icon-tabler
        icons-tabler-filled icon-tabler-shopping-cart"><path stroke="none"
        d="M0 0h24v24H0z" fill="none"/><path d="M6 2a1 1 0 0 1 .993 .883l.007
        .117v1.068l13.071 .935a1 1 0 0 1 .929 1.024l-.01 .114l-1 7a1 1 0 0 1
        -.877 .853l-.113 .006h-12v2h10a3 3 0 1 1 -2.995 3.176l-.005 -.176l.005
        -.176c.017 -.288 .074 -.564 .166 -.824h-5.342a3 3 0 1 1 -5.824
        1.176l-.005 -.176l.005 -.176a3.002 3.002 0 0 1 1.995 -2.654v-12.17h-1a1
        1 0 0 1 -.993 -.883l-.007 -.117a1 1 0 0 1 .883 -.993l.117 -.007h2zm0
        16a1 1 0 1 0 0 2a1 1 0 0 0 0 -2zm11 0a1 1 0 1 0 0 2a1 1 0 0 0 0 -2z" /></svg>
        <p id="cart">0</p>
    </a>
</div>
<style>
    div {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .store {
        font-size: 20px;
    }

    .nav {
        gap: 20px;
    }

    a {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 70px;
        background-color: var(--primary-clr);
        border-radius: 24px;
        padding: 10px 20px;
        text-decoration: none;
        color: var(--primary-fnt-clr);
        gap: 5px;
        font-weight: 600;
        font-size: 20px;
    }

    a:hover {
        opacity: 0.5;
    }

    svg {
        height: 30px;
        width: 30px;
    }
</style>